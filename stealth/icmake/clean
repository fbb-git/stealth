string remove1;
string remove2;
string remove3;

void setRemovals()
{
    // always:
        remove1 = 
        "debian/stealth.substvars debian/stealth build-stamp configure-stamp";

    // unless `minimal':
        remove2 = 
        "tmp/bin tmp/o o */o libstealth.a manual-*-stamp "
        "release.yo release.h";
}

void clean(int dist)
{
    setRemovals();

    run("rm -rf " + remove1);

    if (!dist && getenv("STEALTH") == "minimal")
    {
        printf("\n"
            "WARNING: PERFORMED MINIMAL CLEANUP\n");
        exit(0);
    }

    run("rm -rf " + remove2);

    if (dist)
        run("rm -rf tmp");

    exit(0);
}




